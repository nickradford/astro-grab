{
  "name": "astro-grab-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:demo": "bun run --filter demo build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:watch": "vitest",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "link:packages": "for dir in packages/*; do (cd \"$dir\" && bun link); done",
    "unlink:packages": "for dir in packages/*; do (cd \"$dir\" && bun unlink); done",
    "lint": "oxlint",
    "format": "prettier --write .",
    "ci:version": "cp README.md packages/astro-grab/ && changeset version && bun update",
    "ci:publish": "for dir in packages/*; do (cd \"$dir\" && bun publish || true); done && changeset tag"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@types/bun": "1.3.5",
    "oxlint": "1.34.0",
    "prettier": "3.7.4",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tsup": "8.5.1",
    "turbo": "2.7.2",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "2.1.9"
  },
  "packageManager": "bun@1.3.5"
}
