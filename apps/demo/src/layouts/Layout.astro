---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "../styles/global.css"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      body {
        @apply font-sans leading-relaxed text-gray-900 bg-white min-h-screen;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
