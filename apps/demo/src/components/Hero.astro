---
// Hero component
import ShortcutDisplay from "./ShortcutDisplay.astro";
---

<div class="relative w-full bg-black">
  {/* Orange Grid Background */}
  <div
    class="absolute inset-0 z-0"
    style="background: #000000; background-image: linear-gradient(to right, rgba(255,165,0,0.2) 1px, transparent 1px), linear-gradient(to bottom, rgba(255,165,0,0.2) 1px, transparent 1px); background-size: 40px 40px;"
  >
  </div>
  {/* Transparency Mask */}
  <div
    class="absolute inset-0 z-5"
    style="background: radial-gradient(circle at center, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 70%);"
  >
  </div>
  {/* Your Content/Components */}
  <section class="relative z-10 py-24 text-center">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:px-8">
      <h1
        class="mb-6 font-mono text-5xl font-bold tracking-tight text-white sm:text-6xl lg:text-7xl"
      >
        astro-grab
      </h1>
       <p class="mb-8 text-lg text-gray-400 sm:text-xl">
          Visual element targeting for astro. <span class="hidden md:block">
          Try it, hit <ShortcutDisplay />
          </span>
       </p>
      <div class="flex md:flex-col items-center justify-center gap-6 sm:flex-row">
        <a
          href="#installation"
          data-umami-event="get-started"
          class="bg-orange-500 px-8 py-4 font-bold tracking-wide text-white uppercase transition-colors duration-200 hover:bg-orange-600"
          >Get Started</a
        >
        <a
          href="https://github.com/nickradford/astro-grab"
          data-umami-event="github"
          target="_blank"
          class="bg-gray-800 px-8 py-4 font-bold tracking-wide text-white uppercase transition-colors duration-200 hover:bg-gray-700"
          ><i class="ph ph-fill ph-github-logo mr-2"></i>GitHub</a
        >
      </div>
    </div>
  </section>


</div>
