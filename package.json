{
  "name": "astro-grab-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:demo": "bun run --filter demo build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:watch": "vitest",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "link:packages": "for dir in packages/*; do (cd \"$dir\" && bun link); done",
    "unlink:packages": "for dir in packages/*; do (cd \"$dir\" && bun unlink); done",
    "lint": "oxlint",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@types/bun": "^1.1.0",
    "oxlint": "1.34.0",
    "prettier": "3.7.4",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tsup": "^8.3.0",
    "turbo": "2.7.2",
    "typescript": "^5.7.0",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "^2.1.0"
  },
  "packageManager": "bun@1.3.5"
}
